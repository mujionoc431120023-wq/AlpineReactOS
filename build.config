# Alpine ReactOS Build Configuration

# Metadata
PROJECT_NAME="Alpine ReactOS"
PROJECT_VERSION="1.0.0"
ISO_LABEL="AlpineReactOS"
BUILD_DATE=$(date -u +"%Y-%m-%dT%H:%M:%SZ")

# Paths
PROJECT_ROOT="${PROJECT_ROOT:-.}"
BUILD_DIR="${BUILD_DIR:-$PROJECT_ROOT/build}"
ROOTFS_DIR="${ROOTFS_DIR:-$PROJECT_ROOT/rootfs}"
APP_DIR="${APP_DIR:-$PROJECT_ROOT/app}"
OUTPUT_DIR="${OUTPUT_DIR:-$BUILD_DIR/output}"

# ISO Configuration
ISO_VOLUME_ID="AlpineReactOS"
ISO_BOOT_CATALOG="boot/syslinux/boot.cat"
ISO_BOOT_IMAGE="boot/syslinux/syslinux.bin"
ISO_OUTPUT_FILE="$OUTPUT_DIR/AlpineReactOS.iso"

# Alpine Linux Settings
ALPINE_VERSION="latest-stable"
ALPINE_ARCH="x86_64"

# GeminiOS Settings
GEMINI_PORT=80
GEMINI_ROOT="/var/www/html/gemini"
GEMINI_LOG="/var/log/gemini.log"

# Build Flags
ENABLE_GRUB=true
ENABLE_SYSLINUX=true
ENABLE_UEFI=false
COMPRESS_ISO=true

# Memory/Size Settings
MIN_RAM_MB=512
ROOTFS_SIZE_MB=500
ISO_MIN_SIZE_MB=100
