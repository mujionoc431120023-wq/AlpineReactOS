# Alpine ReactOS Build Configuration Template
# Copy to .env and modify as needed

# Project Metadata
PROJECT_NAME=AlpineReactOS
PROJECT_VERSION=1.0.0
ISO_LABEL=AlpineReactOS
BUILD_DATE=$(date -u +"%Y-%m-%dT%H:%M:%SZ")

# Directories
PROJECT_ROOT=.
BUILD_DIR=build
ROOTFS_DIR=rootfs
APP_DIR=app
OUTPUT_DIR=build/output

# ISO Configuration
ISO_VOLUME_ID=AlpineReactOS
ISO_BOOT_CATALOG=boot/syslinux/boot.cat
ISO_BOOT_IMAGE=boot/syslinux/syslinux.bin
ISO_OUTPUT_FILE=build/output/AlpineReactOS.iso

# Alpine Linux
ALPINE_VERSION=latest-stable
ALPINE_ARCH=x86_64

# GeminiOS Application
GEMINI_PORT=80
GEMINI_ROOT=/var/www/html/gemini
GEMINI_LOG=/var/log/gemini.log

# Boot Configuration
ENABLE_GRUB=true
ENABLE_SYSLINUX=true
ENABLE_UEFI=false
COMPRESS_ISO=true

# System Limits
MIN_RAM_MB=512
ROOTFS_SIZE_MB=500
ISO_MIN_SIZE_MB=100

# Build Flags
VERBOSE=0
SKIP_DEPS_CHECK=0
PARALLEL_BUILD=1
KEEP_ARTIFACTS=0

# Docker Configuration (if using Docker)
DOCKER_IMAGE_NAME=alpinereactos
DOCKER_BUILD_CONTEXT=.
DOCKER_MEMORY_LIMIT=2g

# Deployment
DEPLOY_SSH_USER=
DEPLOY_SSH_HOST=
DEPLOY_REMOTE_PATH=/var/iso/
